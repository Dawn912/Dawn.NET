<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <logger name="log">
    <!--OFF > FATAL > ERROR > WARN > INFO > DEBUG  > ALL -->
    <level value="ALL"/>
    <appender-ref ref="InfoAppender"/>
    <appender-ref ref="ErrorAppender"/>
    <appender-ref ref="DebugAppender"/>
    <appender-ref ref="FatalAppender"/>
  </logger>
  <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
    <file value="D:\\Logs\\Error\\" />
    <staticLogFileName value="false" />
    <appendToFile value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <rollingStyle value="Composite" />
    <maximumFileSize value="3MB" />
    <maxSizeRollBackups value="400" />
    <datePattern value="yyyy-MM-dd-HH&quot;.log&quot;"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d{yyyy-MM-dd,HH:mm:ss.fff},[%-5level],%message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR"/>
      <levelMax value="ERROR"/>
    </filter>
  </appender>
  <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
    <file value="D:\\Logs\\Info\\"/>
    <staticLogFileName value="false"/>
    <appendToFile value="true"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <rollingStyle value="Composite"/>
    <datePattern value="yyyy-MM-dd-HH&quot;.log&quot;"/>
    <maximumFileSize value="5MB"/>
    <maxSizeRollBackups value="1000"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d{yyyy-MM-dd,HH:mm:ss.fff},[%-5level],%message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="INFO"/>
      <levelMax value="INFO"/>
    </filter>
  </appender>
  <appender name="DebugAppender" type="log4net.Appender.RollingFileAppender">
    <file value="D:\\Logs\\Debug\\"/>
    <staticLogFileName value="false"/>
    <appendToFile value="true"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <rollingStyle value="Composite"/>
    <datePattern value="yyyy-MM-dd-HH&quot;.log&quot;"/>
    <maximumFileSize value="5MB"/>
    <maxSizeRollBackups value="1000"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d{yyyy-MM-dd,HH:mm:ss.fff},[%-5level],%message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="DEBUG"/>
      <levelMax value="DEBUG"/>
    </filter>
  </appender>
  <appender name="FatalAppender" type="log4net.Appender.RollingFileAppender">
    <file value="D:\\Logs\\Fatal\\" />
    <staticLogFileName value="false" />
    <appendToFile value="true" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <rollingStyle value="Composite" />
    <maximumFileSize value="3MB" />
    <maxSizeRollBackups value="400" />
    <datePattern value="yyyy-MM-dd-HH&quot;.log&quot;"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d{yyyy-MM-dd,HH:mm:ss.fff},[%-5level],%message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="FATAL"/>
      <levelMax value="FATAL"/>
    </filter>
  </appender>
</log4net>